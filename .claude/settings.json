{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Bash",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "Skill"
    ]
  },
  "settings": {
    "working_directory": "."
  },
  "hooks": {
    "SessionStart": [{
      "matcher": "",
      "hooks": [{
        "type": "command",
        "command": "bash -c 'echo \"=== LONG-TERM MEMORY ===\"; cat memory/MEMORY.md 2>/dev/null || echo \"(no long-term memory yet)\"; echo; echo \"=== TODAY MEMORY ===\"; cat memory/$(date +%Y-%m-%d).md 2>/dev/null || echo \"(no entries today yet)\"'"
      }]
    }],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [{
          "type": "command",
          "command": "bash /root/OpenClaude/guard/guard.sh"
        }]
      },
      {
        "matcher": "Write",
        "hooks": [{
          "type": "command",
          "command": "bash /root/OpenClaude/guard/guard-write.sh"
        }]
      },
      {
        "matcher": "Edit",
        "hooks": [{
          "type": "command",
          "command": "bash /root/OpenClaude/guard/guard-write.sh"
        }]
      }
    ]
  }
}

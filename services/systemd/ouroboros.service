[Unit]
Description=Ouroboros â€” watchdog for OpenClaude Telegram Bot
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/path/to/OpenClaude
ExecStart=/usr/bin/bash /path/to/OpenClaude/bin/ouroboros.sh
Restart=always
RestartSec=10
Environment=OUROBOROS_INTERVAL=30

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ouroboros

[Install]
WantedBy=default.target
